<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/rlUserdata"
    android:orientation="vertical"
    tools:context=".activity.AccountDetailActivity">


    <RelativeLayout
        android:background="@color/BackgroundAccount"
        android:layout_weight=".9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:tint="@android:color/white"
            android:id="@+id/ibBack"
            android:layout_gravity="right"
            android:src="@drawable/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/ibBack"
            android:id="@+id/tvName"
            android:layout_marginTop="16dp"
            android:paddingLeft="8dp"
            android:text="Jose Da silva Teste"
            android:textSize="32dp" />

        <TextView
            android:textColor="@android:color/white"
            android:layout_below="@+id/tvName"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAccount"
            android:text="Conta"
            android:textSize="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:textColor="@android:color/white"
            android:layout_below="@+id/tvAccount"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvaccountNumber"
            android:textSize="32dp"
            android:text="2050 / 0.1"
            android:layout_marginTop="8dp" />

        <TextView
            android:textColor="@android:color/white"
            android:layout_below="@+id/tvaccountNumber"
            android:paddingLeft="8dp"
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16dp"
            android:text="Saldo" />

        <TextView
            android:textColor="@android:color/white"
            android:layout_below="@+id/tvBalance"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:text="R$ 1.000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_weight=".5"
        android:layout_margin="5dip"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardCornerRadius="8dip">

        <RelativeLayout
            android:id="@+id/rlBills"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingTop="16dp"
                android:id="@+id/tvRecent"
                android:textColor="@color/BillsColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:text="Recentes"/>

            <TextView
                android:id="@+id/tvPayment"
                android:paddingTop="16dp"
                android:paddingLeft="32dp"
                android:textSize="16dp"
                android:text="Pagamento"
                android:layout_below="@id/tvRecent"
                android:textColor="@color/PaymentColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPayment"
                android:paddingTop="16dp"
                android:paddingLeft="32dp"
                android:text="Contas de luz"
                android:textColor="@color/BillsColor" />

            <TextView
                android:id="@+id/tvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="116dp"
                android:layout_marginLeft="206dp"
                android:layout_marginRight="32dp"
                android:layout_toRightOf="@+id/tvPayment"
                android:maxLines="1"
                android:text="R$ 1.000.00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDate"
                android:maxLines="1"
                android:text="12/12/2018"
                android:layout_toRightOf="@id/tvPayment"
                android:layout_marginLeft="206dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="32dp"
                android:textSize="16dp"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

