<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/rlUserdata"
    android:orientation="vertical"
    tools:context=".activity.AccountDetailActivity">


    <LinearLayout
        android:background="@color/BackgroundAccount"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:layout_marginTop="16dp"
            android:paddingLeft="8dp"
            android:text="Jose Da silva Teste"
            android:textSize="32dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/logout"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/BackgroundAccount">
        <TextView
            android:textColor="@android:color/white"
            android:layout_below="@+id/tvName"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAccount"
            android:text="Conta"
            android:textSize="16dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvaccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:text="2050 / 0.1"
            android:textColor="@android:color/white"
            android:textSize="32dp" />

        <TextView
            android:textColor="@android:color/white"
            android:paddingLeft="8dp"
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16dp"
            android:text="Saldo" />

        <TextView
            android:id="@+id/tvUserBalance"
            android:textColor="@android:color/white"
            android:layout_below="@+id/tvBalance"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:text="R$ 1.000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recentes"
        android:paddingLeft="16dp"
        android:textSize="32dp"
        android:textColor="@color/BillsColor"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>

